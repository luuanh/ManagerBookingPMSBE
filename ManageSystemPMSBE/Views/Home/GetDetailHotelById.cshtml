@using ManageSystemPMSBE.Controllers;
@using ManageSystemPMSBE.Models;
@model Hotel
@{
    ViewBag.Title = "GetDetailHotelById";
   Hotel data= (Hotel)ViewData["hotel"];
}

<div >
    <div >

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông tin khách sạn @Model.Name</h4>
            </div>
            <div class="modal-body">
                @*@using (Html.BeginForm("UpdateHotel","Home", FormMethod.Post))
                {

                }*@
                <form method="post" action="/Home/UpdateHotel">
                    <div class="col-md-6">
                        <input name="HotelId" value="@Model.HotelId" hidden/>
                        <label>Mã KS:</label>
                        <input class="form-control" type="text" disabled value="@Model.Code" />
                        <label>Tên KS:</label>
                        <input class="form-control" type="text" disabled value="@Model.Name" />
                        <label>SĐT:</label>
                        <input class="form-control" type="text" disabled value="@Model.Phone" />
                        <label>Hotline:</label>
                        <input class="form-control" type="text" disabled value="@Model.Hotline" />


                    </div>
                    <div class="col-md-6">
                        <label>Địa chỉ:</label>
                        <input class="form-control" type="text" disabled value="@Model.Address" />
                        <label>Ngày tạo:</label>
                        <input class="form-control" type="text" disabled value="@Model.CreateDate" />
                        <label>Trạng thái:</label>
                        <select class="form-control" id="Status" name="Status" ng-model="filters.status" convert-to-number>
                            @if (Model.Status == 1)
                            {
                                <option value="1" selected>Dùng thử</option>
                                <option value="2">Dùng thật</option>
                                <option value="3">Yêu cầu gia hạn</option>
                                <option value="4">Đã khóa</option>
                            }
                            else if (Model.Status == 2)
                            {
                                <option value="1">Dùng thử</option>
                                <option value="2" selected>Dùng thật</option>
                                <option value="3">Yêu cầu gia hạn</option>
                                <option value="4">Đã khóa</option>
                            }
                            else if (Model.Status == 3)
                            {
                                <option value="1">Dùng thử</option>
                                <option value="2">Dùng thật</option>
                                <option value="3" selected>Yêu cầu gia hạn</option>
                                <option value="4">Đã khóa</option>
                            }
                            else
                            {
                                <option value="1">Dùng thử</option>
                                <option value="2">Dùng thật</option>
                                <option value="3">Yêu cầu gia hạn</option>
                                <option value="4" selected>Đã khóa</option>
                            }
                        </select>

                        <label>Thời gian gia hạn :</label>
                        <input class="form-control" id="TimeExtended" name="TimeExtended" type="number" value="@Model.TimeExtended" />
                        <label>Website:</label>
                        <input class="form-control" type="text" disabled value="@Model.Website" />

                    </div>
                    <button type="submit" class="btn btn-default btn-info" style="margin-top:1em" data-dismiss="modal">Save</button>

                </form>

            </div>
            <div class="modal-footer" style="margin-top:1em">
                <button type="button" class="btn btn-default btn-info" style="margin-top:1em" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

