                                <label>Năm</label>
                                <select ng-change="getUse()" ng-model="paramUse.year" class="form-control" convert-to-number>
                                    @for (int i = 2016; i < 2021; i++)
                                    {
                                        <option value="@i">Năm @i</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Tình hình đăng ký phần mềm</h3>
