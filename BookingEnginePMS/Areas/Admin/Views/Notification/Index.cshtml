@using BookingEnginePMS.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<TransitionLanguage> transitions = (List<TransitionLanguage>)Session["transitions"];
    Transition transition = new Transition(transitions);
}
<script src="~/Areas/Admin/Content/js/Notification/notification.js"></script>

<script>
    $(function () {
        var e = $("#kUI_window")
            , t = $("#kUI_undo");
        if (e.length) {
            var a = e
                , n = t.bind("click", function () {
                    a.data("kendoWindow").open(),
                        n.hide()
                });
            a.data("kendoWindow") || a.kendoWindow({
                width: "600px",
                title: "Information",
                actions: ["Pin", "Minimize", "Maximize", "Close"],
                close: function () {
                    n.show()
                }
            })
        }
    })
</script>
<div id="kUI_window" style="display:none;padding-top: 24px !IMPORTANT;">
    <div>
        <div class="uk-grid uk-margin-bottom">
            <div class="uk-width-1-1 uk-margin-medium-bottom">
                <h3>@(transition.Translate(1260, "Add New Notification"))</h3>
                <hr />
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <div class="uk-grid">
                    <div class="uk-width-medium-1-2 uk-width-1 uk-margin-medium-bottom">
                        <div class="md-input-wrapper">
                            <label><b>@(transition.Translate(1261, "Title")) <span class="star-red">*</span></b></label>
                            <input ng-click="RefreshValidate()" ng-model="data.Title" type="text" class="md-input" />
                            <span class="md-input-bar "></span>
                            <span id="err_Title" class="error">@(transition.Translate(1262, "Value is invalid!"))</span>
                        </div>
                    </div>
                    <div class="uk-width-medium-1-4 uk-width-1-2 uk-margin-medium-bottom">
                        <div class="md-input-wrapper">
                            <label><b>@(transition.Translate(1263, "Date")) <span class="star-red">*</span></b></label>
                            <input ng-click="RefreshValidate()" id="FromDate_Step1" data-uk-datepicker="{format:'DD-MM-YYYY'}" autocomplete="off" ng-model="FromDate" type="text" class="md-input">
                            <span class="md-input-bar "></span>
                            <span id="err_fromDate" class="error">@(transition.Translate(1262, "Value is invalid!"))</span>
                        </div>
                    </div>
                    <div class="uk-width-medium-1-4 uk-width-1-2 uk-margin-medium-bottom">
                        <div class="md-input-wrapper">
                            <label><b>@(transition.Translate(1264, "Hour")) <span class="star-red">*</span></b></label>
                            <input ng-click="RefreshValidate()" id="HourCheckin_Step1" type="text" class="md-input format_hour" value="14:00" data-role="maskedtextbox" style="height: 30px;padding-left: 0;">
                            <span class="md-input-bar "></span>
                            <span id="err_hourFrom" class="error">@(transition.Translate(1262, "Value is invalid!"))</span>
                        </div>
                    </div>
                    <div class="uk-width-1 uk-margin-bottom">
                        <div class="uk-grid">
                            <div class="uk-width-medium-1-2">
                                <div class="uk-grid">
                                    <div class="uk-width-1 uk-margin-medium-bottom">
                                        <div class="md-input-wrapper">
                                            <label><b>@(transition.Translate(1265, "Content")) <span class="star-red">*</span></b></label>
                                            <textarea ng-model="data.Content" rows="5" class="md-input"></textarea>
                                            <span class="md-input-bar "></span>
                                            <span id="err_Content" class="error">@(transition.Translate(1262, "Value is invalid!"))</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="uk-width-medium-1-2">
                                <div class="md-input-wrapper">
                                    <label><b>@(transition.Translate(1266, "Notice to employees")) <span class="star-red">*</span></b></label>
                                    <div class="uk-grid" ng-cloak>
                                        <div class="uk-width-1-3 uk-margin-small-bottom" ng-repeat="item in users">
                                            <label>
                                                <input ng-model="item.Access" type="checkbox" />
                                                <span>{{item.FullName}}-{{item.UserName}}</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-grid">
            <div class="uk-width-1 box-edit-booking uk-text-right">
                <button class="md-btn md-btn-new" ng-click="Post()" ng-if="isAdd">@(transition.Translate(1267, "Add"))</button>
                <button class="md-btn md-btn-new" ng-click="Put()" ng-if="!isAdd">@(transition.Translate(1268, "Update"))</button>
                <button class="md-btn" ng-click="CloseWindow()">@(transition.Translate(1269, "Cancel"))</button>
            </div>
        </div>
    </div>
</div>
<div class="uk-grid">
    <div class="uk-width-1-1 uk-margin-medium-bottom">
        <h3>@(transition.Translate(1251, "Notifications"))</h3>
        <hr />
        <p style="font-size: 12px;">
            @(transition.Translate(1252, "tipNotification"))
        </p>
        <hr />
    </div>
    <div class="uk-width-1-1 uk-margin-small-bottom">
        <div class="uk-grid">
            <div class="uk-width-medium-1-3 uk-margin-bottom">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@(transition.Translate(1253, "Key Search"))</b></label>
                        <input ng-model="filters.keySearch" type="text" class="md-input" placeholder="Name">
                        <span class="md-input-bar "></span>
                    </div>
                    <span class="uk-input-group-addon" ng-click="GetData()">
                        <a class="md-btn md-btn-new md-btn-wave-light">@(transition.Translate(1254, "Search"))</a>
                    </span>
                </div>
            </div>
            <div class="uk-width-medium-2-3 uk-text-right">
                <button ng-click="ShowAdd()" class="md-btn md-btn-new md-btn-wave-light">@(transition.Translate(1255, "Add New"))</button>
            </div>
        </div>
    </div>
    <div class="uk-width-1-1">
        <div ui-grid="gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-move-columns
             ui-grid-pinning ui-grid-pagination ui-grid-exporter class="grid box-grid"></div>
    </div>
</div>
<div id="ModalConfirm" class="uk-modal">
    <div class="uk-modal-dialog">
        <button type="button" class="uk-modal-close uk-close"></button>
        <h2 class="heading_a">@(transition.Translate(1256, "Warning!"))</h2>
        <div>
            <div class="uk-grid uk-margin-bottom">
                <div class="uk-width-1">
                    <h4>@(transition.Translate(1257, "Are you sure you want to delete this notification?"))</h4>
                </div>
            </div>
            <div class="uk-grid">
                <div class="uk-width-1 uk-text-right">
                    <button class="md-btn md-btn-danger" ng-click="Delete()">@(transition.Translate(1258, "Delete"))</button>
                    <button class="md-btn uk-modal-close uk-close">@(transition.Translate(1259, "Cancel"))</button>
                </div>
            </div>
        </div>
    </div>
</div>