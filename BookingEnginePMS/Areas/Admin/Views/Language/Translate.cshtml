@using BookingEnginePMS.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSetting.cshtml";
    List<TransitionLanguage> transitions = (List<TransitionLanguage>)Session["transitions"];
    Transition transition = new Transition(transitions);
}
<script>
    $("#Translations").addClass("menu-clicked")
</script>
<script src="~/Areas/Admin/Content/js/Language/translate.js"></script>
<div class="uk-grid">
    <div class="uk-width-1 uk-margin-medium-bottom">
        <h3>@(transition.Translate(1187, "Translations"))</h3>
    </div>
    <div class="uk-width-1 uk-margin-small-bottom">
        <div class="uk-grid" ng-cloak>
            <div class="uk-width-medium-1-4 uk-width-1-2 uk-margin-bottom">
                <div class="md-input-wrapper">
                    <label><b>@(transition.Translate(1188, "Language"))</b></label>
                    <select ng-model="filters.languageId" class="md-input" convert-to-number>
                        <option value="{{item.LanguageId}}" ng-repeat="item in languages">{{item.Title}}</option>
                    </select>
                    <span class="md-input-bar "></span>
                </div>
            </div>
            <div class="uk-width-medium-1-4 uk-width-1-2 uk-margin-bottom">
                <div class="md-input-wrapper">
                    <label><b>@(transition.Translate(1189, "Screen"))</b></label>
                    <select ng-model="filters.screenId" class="md-input" convert-to-number>
                        <option value="{{item.ScreenId}}" ng-repeat="item in screens">{{item.Name}}</option>
                    </select>
                    <span class="md-input-bar "></span>
                </div>
            </div>
            <div class="uk-width-medium-1-2">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@(transition.Translate(1190, "Key Search"))</b></label>
                        <input ng-model="filters.keySearch" type="text" class="md-input">
                        <span class="md-input-bar "></span>
                    </div>
                    <span class="uk-input-group-addon">
                        <a class="md-btn md-btn-new md-btn-wave-light" ng-click="GetData()">@(transition.Translate(1191, "Search"))</a>
                    </span>
                </div>
            </div>
            <div class="uk-width-1">
                <span style="color:red">(*)</span> @(transition.Translate(1198, "Key of multi screen")). <span style="color:red">(**)</span> @(transition.Translate(1197, "Key of the menu setting sidebar")). <span style="color:red">(***)</span> @(transition.Translate(1196, "Key of the menu top"))
            </div>
            <div class="uk-width-1 uk-margin-bottom">
                <hr />
            </div>
        </div>
    </div>
    <div class="uk-width-1">
        <div class="uk-grid">
            <div class="uk-width-1 uk-margin-bottom uk-text-right">
                <button ng-click="PutAllCellTranslate()" class="md-btn md-btn-new md-btn-wave-light">@(transition.Translate(1192, "Update All"))</button>
            </div>
            <div class="uk-width-medium-1-2 uk-margin-medium-bottom" ng-repeat="item in data track by $index">
                <div class="uk-grid">
                    <div class="uk-width-1-3">
                        <div class="md-input-wrapper">
                            <label>
                                <b>@(transition.Translate(1194, "Key"))</b>
                                <span style="color:red" ng-if="item.ScreenId == -1">(*)</span>
                                <span style="color:red" ng-if="item.ScreenId == -2">(**)</span>
                                <span style="color:red" ng-if="item.ScreenId == -3">(***)</span>
                            </label>
                            <input title="{{item.Key}}" disabled ng-model="item.Key" type="text" class="md-input">
                            <span class="md-input-bar "></span>
                        </div>
                    </div>
                    <div class="uk-width-2-3">
                        <div class="uk-input-group">
                            <div class="md-input-wrapper">
                                <label><b>@(transition.Translate(1193, "Result"))</b></label>
                                <input ng-model="item.Result" type="text" class="md-input">
                                <span class="md-input-bar "></span>
                            </div>
                            <span class="uk-input-group-addon">
                                <button ng-click="PutCellTranslate(item)" class="md-btn md-btn-new md-btn-wave-light">@(transition.Translate(1195, "Update"))</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

