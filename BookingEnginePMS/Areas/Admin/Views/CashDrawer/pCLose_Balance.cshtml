@using BookingEnginePMS.Models;
@model Transition
<div class="uk-grid uk-margin-bottom">
    <div class="uk-width-1 uk-margin-medium-bottom">
        <div class="md-input-wrapper">
            <label><b>@Model.Translate(1146, "Cash Drawer")</b></label>
            <span style="padding-left: 5px;font-size: 14px;font-weight: 600;">{{drawer.Name}} (@Model.Translate(1181, "in use by") {{drawer.UserSession}})</span>
        </div>
    </div>
    <div class="uk-width-1">
        <div class="uk-grid">
            <div class="uk-width-1-2 uk-margin-bottom">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@Model.Translate(1182, "Drawer Balance")</b></label>
                        <input ng-model="closeCash.DrawerBalance" type="text" class="md-input" />
                        <span class="md-input-bar "></span>
                    </div>
                    <span class="uk-input-group-addon">
                        <span>₫</span>
                    </span>
                </div>
            </div>
            <div class="uk-width-1-2 uk-margin-bottom">
                <div class="md-input-wrapper">
                    <label><b>@Model.Translate(1183, "System Balance")</b></label>
                    <span style="padding-left: 5px;font-weight: 600;font-size: 14px;">{{drawer.StartBalance | currency:'':'0'}} ₫</span>
                    <span class="md-input-bar "></span>
                </div>
            </div>
        </div>
    </div>
    <div class="uk-width-1">
        <div class="md-input-wrapper">
            <label><b>@Model.Translate(1172, "Notes")</b></label>
            <textarea ng-model="closeCash.NoteClose" rows="2" class="md-input"></textarea>
            <span class="md-input-bar "></span>
        </div>
    </div>
</div>