@using BookingEnginePMS.Models;
@model Transition

<div class="uk-grid uk-margin-bottom">
    <div class="uk-width-1 uk-margin-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-2">
                <b>@Model.Translate(1185, "Cashier")</b>
            </div>
            <div class="uk-width-1-2">
                <span>{{drawer.Name}} (@Model.Translate(1181, "in use by") {{drawer.UserSession}})</span>
            </div>
        </div>
    </div>
    <div class="uk-width-1 uk-margin-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-2">
                <b>@Model.Translate(1186, "Starting Balance")</b>
            </div>
            <div class="uk-width-1-2 uk-text-right">
                <span>{{drawer.StartBalance | currency:'':'0'}} ₫</span>
            </div>
        </div>
    </div>
    <div class="uk-width-1 uk-margin-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-2">
                <b>@Model.Translate(1182, "Drawer Balance")</b>
            </div>
            <div class="uk-width-1-2 uk-text-right">
                <span>{{closeCash.DrawerBalance | currency:'':'0'}} ₫</span>
            </div>
        </div>
    </div>
    <div class="uk-width-1 uk-margin-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-2">
                <b>@Model.Translate(1175, "Cash Drop")</b>
            </div>
            <div class="uk-width-1-2 uk-text-right">
                <span>{{closeCash.CashDrop | currency:'':'0'}} ₫</span>
            </div>
        </div>
    </div>
    <div class="uk-width-1 uk-margin-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-2">
                <b>@Model.Translate(1184, "Ending Shift Balance")</b>
            </div>
            <div class="uk-width-1-2 uk-text-right">
                <span>{{(closeCash.DrawerBalance - closeCash.CashDrop)  | currency:'':'0'}} ₫</span>
            </div>
        </div>
    </div>
    <div class="uk-width-1 uk-margin-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-2">
                <b>@Model.Translate(1172, "Notes")</b>
            </div>
            <div class="uk-width-1-2">
                <span>{{closeCash.NoteClose}}</span>
            </div>
        </div>
    </div>
</div>