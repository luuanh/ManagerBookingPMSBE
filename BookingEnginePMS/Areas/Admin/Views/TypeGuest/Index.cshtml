@using BookingEnginePMS.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSetting.cshtml";
    List<TransitionLanguage> transitions = (List<TransitionLanguage>)Session["transitions"];
    Transition transition = new Transition(transitions);
}
<script>
    $("#TypeGuest").addClass("menu-clicked")
</script>
<script>
    $(function () {
        var e = $("#kUI_window")
            , t = $("#kUI_undo");
        if (e.length) {
            var a = e
                , n = t.bind("click", function () {
                    a.data("kendoWindow").open(),
                        n.hide()
                });
            a.data("kendoWindow") || a.kendoWindow({
                width: "600px",
                title: "Information",
                actions: ["Pin", "Minimize", "Maximize", "Close"],
                close: function () {
                    n.show()
                }
            })
        }
    })
</script>
<script src="~/Areas/Admin/Content/js/TypeGuest/type-guest.js"></script>
<div id="kUI_window" style="display:none">
    <div>
        <div class="uk-grid uk-margin-bottom">
            <div class="uk-width-1 uk-margin-medium-bottom">
                <h2>@(transition.Translate(1020, "Type Guest"))</h2>
                <hr />
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <label><b>@(transition.Translate(1021, "Name")) <span class="star-red">*</span></b></label>
                <input ng-click="RefreshValidate()" ng-model="typeGuest.TypeGuestName" type="text" class="md-input">
                <span class="md-input-bar "></span>
                <span id="err_TypeGuestName" class="error">@(transition.Translate(1022, "Value is invalid!"))</span>
            </div>
            <div class="uk-width-1-2 uk-margin-medium-bottom">
                <label><b>@(transition.Translate(1023, "Require Min Amount")) <span class="star-red">*</span></b></label>
                <input ng-click="RefreshValidate()" ng-model="typeGuest.MinAmount" type="text" class="md-input">
                <span class="md-input-bar "></span>
                <span id="err_MinAmount" class="error">@(transition.Translate(1022, "Value is invalid!"))</span>
            </div>
            <div class="uk-width-1-2 uk-margin-medium-bottom">
                <label><b>@(transition.Translate(1024, "Discount"))(%) <span class="star-red">*</span></b></label>
                <input ng-click="RefreshValidate()" ng-model="typeGuest.Discount" type="text" class="md-input">
                <span class="md-input-bar "></span>
                <span id="err_Discount" class="error">@(transition.Translate(1022, "Value is invalid!"))</span>
            </div>
        </div>
        <div class="uk-grid box-edit-booking">
            <div class="uk-width-1 uk-text-right" style="padding-right: 50px;">
                <button class="md-btn md-btn-new" ng-click="Post()" ng-if="isAdd">@(transition.Translate(1025, "Add"))</button>
                <button class="md-btn md-btn-new" ng-click="Put()" ng-if="!isAdd">@(transition.Translate(1026, "Update"))</button>
                <button class="md-btn md-btn-danger" ng-click="CloseWindow()">@(transition.Translate(1027, "Cancel"))</button>
            </div>
        </div>
    </div>
</div>
<div class="uk-grid">
    <div class="uk-width-1-1 uk-margin-medium-bottom">
        <h3>@(transition.Translate(1020, "Type Guest"))</h3>
    </div>
    <div class="uk-width-1-1 uk-margin-small-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-3">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@(transition.Translate(1028, "Key Search"))</b></label>
                        <input ng-model="filters.keySearch" type="text" class="md-input" placeholder="Name">
                        <span class="md-input-bar "></span>
                    </div>
                    <span class="uk-input-group-addon" ng-click="GetData()">
                        <a class="md-btn md-btn-new md-btn-wave-light">@(transition.Translate(1029, "Search"))</a>
                    </span>
                </div>
            </div>
            <div class="uk-width-2-3 uk-text-right">
                <button class="md-btn md-btn-new md-btn-wave-light" ng-click="ShowAdd()">@(transition.Translate(1030, "Add New"))</button>
            </div>
        </div>
    </div>
    <div class="uk-width-1-1">
        <div ui-grid="gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-move-columns
             ui-grid-pinning ui-grid-pagination ui-grid-exporter class="grid box-grid"></div>
    </div>
</div>
<div id="ModalConfirm" class="uk-modal">
    <div class="uk-modal-dialog">
        <button type="button" class="uk-modal-close uk-close"></button>
        <h2 class="heading_a">@(transition.Translate(1031, "Warning!"))</h2>
        <div>
            <div class="uk-grid uk-margin-bottom">
                <div class="uk-width-1">
                    <h4>@(transition.Translate(1032, "Are you sure you want to delete this type guest?"))</h4>
                </div>
            </div>
            <div class="uk-grid">
                <div class="uk-width-1 uk-text-right">
                    <button class="md-btn md-btn-danger" ng-click="Delete()">@(transition.Translate(1033, "Delete"))</button>
                    <button class="md-btn uk-modal-close uk-close">@(transition.Translate(1027, "Cancel"))</button>
                </div>
            </div>
        </div>
    </div>
</div>
