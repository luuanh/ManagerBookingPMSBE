<div style="margin-top: 10px;min-height: 400px;">
    <div class="uk-grid">
        <div class="uk-width-1-1">
            <div class="md-card-list-wrapper">
                <div class="uk-grid">
                    <div class="uk-width-1-1 uk-margin-bottom">
                        <div class="md-card-list" style="margin-top: 0;">
                            <ul>
                                <li ng-click="showDetailEmailSent(item.ReservationEmailSentId)" ng-repeat="item in reservationEmailSents">
                                    <span class="md-card-list-item-date">{{item.Date | date:'dd/MM/yyyy HH:mm'}}</span>
                                    <div class="md-card-list-item-avatar-wrapper">
                                        <span class="md-card-list-item-avatar md-bg-grey">{{item.Source}}</span>
                                    </div>
                                    <div class="md-card-list-item-sender">
                                        <span>{{item.Email}}</span>
                                    </div>
                                    <div class="md-card-list-item-subject">
                                        <span>{{item.Subject}}</span>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
