@using BookingEnginePMS.Models;
@model Transition
<div class="uk-grid">
    <div class="uk-width-large-3-5 uk-width-medium-3-4">
        <div class="uk-grid">
            <div class="uk-width-medium-1-3 uk-margin-bottom">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@Model.Translate(2335, "FromDate") </b></label>
                        <input ng-click="RefreshValidate()" autocomplete="off" id="FromDate_Step1" type="text" data-uk-datepicker="{format:'DD-MM-YYYY'}" ng-model="FromDate" class="md-input" />
                        <span class="md-input-bar "></span>
                        <span id="err_fromDate" class="error">@Model.Translate(29, "Value is invalid")!</span>
                    </div>
                    <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar"></i></span>
                </div>
            </div>
            <div class="uk-width-medium-1-3 uk-margin-bottom">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@Model.Translate(2336, "ToDate") </b></label>
                        <input ng-click="RefreshValidate()" id="ToDate_Step1" type="text" data-uk-datepicker="{format:'DD-MM-YYYY'}" ng-model="ToDate" class="md-input" />
                        <span class="md-input-bar "></span>
                        <span id="err_toDate" class="error">@Model.Translate(29, "Value is invalid")!</span>
                    </div>
                    <span class="uk-input-group-addon">
                        <i class="uk-input-group-icon uk-icon-calendar"></i>
                    </span>
                </div>
            </div>
            <div class="uk-width-medium-1-3">
                <button class="md-btn md-btn-new  md-btn-wave-light" ng-click="GetNumberFutureRoom()">
                    <i class="uk-icon-search"></i>
                    @Model.Translate(31, "Search")
                </button>
            </div>
        </div>
    </div>
    <div class="uk-width-large-2-5 uk-width-medium-1-4 uk-text-right uk-margin-bottom">
        <a href="/Admin/Statistic/DownloadAvailableAccommodations" class="md-btn md-btn-new md-btn-wave-light">@(Model.Translate(849, "Download"))</a>
    </div>
    <div class="uk-width-1">
        <div class="md-input-wrapper" style="padding-top: 0;">
            <h4 class="title-box-accomodation"><b>@Model.Translate(32, "Available Accommodations")</b></h4>
            <div class="uk-overflow-container box-reservation" ng-cloak>
                <table class="uk-table uk-table-bordered" style="border-collapse: collapse;">
                    <thead>
                        <tr style="background: linear-gradient(rgb(246, 247, 248), rgb(215, 215, 215));">
                            <th></th>
                            <th class="uk-text-center" ng-repeat="item in dataNumberFutureRoom.dateTimes track by $index">
                                <span>{{item | date:'dd/MM'}}</span>
                                <span style="display:block">{{item | date:'EEE'}}</span>
                            </th>
                        </tr>
                        <tr style="background-color: #f9f9f9;">
                            <th>@Model.Translate(33, "Accommodation") ({{dataNumberFutureRoom.TotalRoomOfAllRoomType}})</th>
                            <th class="uk-text-center" ng-repeat="item in dataNumberFutureRoom.totalNumberAvailable track by $index">
                                {{item}}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in dataNumberFutureRoom.roomTypes track by $index">
                            <td>{{item.RoomTypeName}} ({{item.TotalRoom}})</td>
                            <td class="uk-text-center" ng-repeat="r in item.NumberRoomAvailable track by $index">
                                {{r}}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
