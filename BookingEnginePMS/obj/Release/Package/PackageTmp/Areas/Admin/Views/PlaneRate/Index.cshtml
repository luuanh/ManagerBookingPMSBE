@using BookingEnginePMS.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<TransitionLanguage> transitions = (List<TransitionLanguage>)Session["transitions"];
    Transition transition = new Transition(transitions);
}
<script>
    $("#menu_7").addClass('click-menu-top')
</script>
<script>
    $(function () {
        var e = $("#kUI_window")
            , t = $("#kUI_undo");
        if (e.length) {
            var a = e
                , n = t.bind("click", function () {
                    a.data("kendoWindow").open(),
                        n.hide()
                });
            a.data("kendoWindow") || a.kendoWindow({
                width: "600px",
                title: "Information",
                actions: ["Pin", "Minimize", "Maximize", "Close"],
                close: function () {
                    n.show()
                }
            })
        }
    })
</script>
<style>
    .uk-comment .uk-comment-body > div {
        padding: 0px 55px;
    }
</style>
<script src="~/Areas/Admin/Content/js/PlaneRate/planerate.js"></script>
<div id="kUI_window" style="display:none;padding-top: 24px !IMPORTANT;">
    <div>
        <div class="uk-grid uk-margin-bottom">
            <div class="uk-width-1 uk-margin-bottom">
                <h2>@(transition.Translate(746, "PlaneRate"))</h2>
                <hr />
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <article class="uk-comment">
                    <header class="uk-comment-header">
                        <span class="icon-left-list">
                            <i class="uk-icon-th-list"></i>
                        </span>
                        <div>
                            <div class="uk-grid">
                                <div class="uk-width-3-5" style="padding: 0;">
                                    <h4 class="uk-comment-title">@(transition.Translate(747, "What is the price type")) <span class="star-red">(*)</span>?</h4>
                                </div>
                                <div class="uk-width-2-5 box-not-render-span" style="padding: 0;">
                                    <select ng-click="ChangeLanguage()" ng-model="languageChoose" class="box-language md-input" convert-to-number>
                                        <option value="{{item.LanguageId}}" ng-repeat="item in language">
                                            <text>{{item.Title}}</text>
                                        </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </header>
                    <div class="uk-comment-body">
                        <div style="padding-right: 0;">
                            <input ng-click="RefreshValidate()" ng-model="ModelForMultiLang.Name" type="text" class="md-input" />
                            <span id="err_Name" class="error">@(transition.Translate(749, "Value is invalid!"))</span>
                        </div>
                    </div>
                </article>
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <article class="uk-comment">
                    <header class="uk-comment-header">
                        <span class="icon-left-list">
                            <i class="uk-icon-dollar "></i>
                        </span>
                        <h4 class="uk-comment-title">@(transition.Translate(750, "How much money")) <span class="star-red">(*)</span>?</h4>
                        <div class="uk-comment-meta">@(transition.Translate(751, "This price for you"))</div>
                    </header>
                    <div class="uk-comment-body">
                        <div class="uk-grid">
                            <div class="uk-width-large-1-4 uk-width-medium-1-2">
                                <div class="uk-input-group">
                                    <div class="md-input-wrapper">
                                        <input ng-click="RefreshValidate()" ng-model="planerate.Price" type="text" class="md-input">
                                        <span id="err_Price" class="error">@(transition.Translate(749, "Value is invalid!"))</span>
                                    </div>
                                    <span class="uk-input-group-addon">
                                        <span>₫</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <article class="uk-comment">
                    <header class="uk-comment-header">
                        <span class="icon-left-list">
                            <i class="uk-icon-bed "></i>
                        </span>
                        <h4 class="uk-comment-title">@(transition.Translate(752, "Which rooms?"))</h4>
                        <div class="uk-comment-meta">@(transition.Translate(753, "The discount will be applied to the room (s)."))</div>
                    </header>
                    <div class="uk-comment-body">
                        <div>
                            <div class="uk-grid">
                                <div class="uk-width-1 uk-margin-top" ng-repeat="item in planerate.PlaneRateRoomTypes">
                                    <label>
                                        <input ng-model="item.Checked" type="checkbox" />
                                        <span>{{item.RoomTypeName}}</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <article class="uk-comment">
                    <header class="uk-comment-header">
                        <span class="icon-left-list">
                            <i class="uk-icon-cutlery "></i>
                        </span>
                        <h4 class="uk-comment-title">@(transition.Translate(754, "Which plan meal?"))</h4>
                        <div class="uk-comment-meta"></div>
                    </header>
                    <div class="uk-comment-body">
                        <div>
                            <div class="uk-grid">
                                <div class="uk-width-1 uk-margin-top">
                                    <label>
                                        <input ng-model="planerate.Breakfast" type="checkbox" />
                                        <span>@(transition.Translate(755, "Breakfast"))</span>
                                    </label>
                                </div>
                                <div class="uk-width-1 uk-margin-top">
                                    <label>
                                        <input ng-model="planerate.Lunch" type="checkbox" />
                                        <span>@(transition.Translate(756, "Lunch"))</span>
                                    </label>
                                </div>
                                <div class="uk-width-1 uk-margin-top">
                                    <label>
                                        <input ng-model="planerate.Dinner" type="checkbox" />
                                        <span>@(transition.Translate(757, "Dinner"))</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
        <div class="uk-grid">
            <div class="uk-width-1 box-edit-booking uk-text-right">
                <button class="md-btn md-btn-new" ng-click="Post()" ng-if="isAdd">@(transition.Translate(758, "Add"))</button>
                <button class="md-btn md-btn-new" ng-click="Put()" ng-if="!isAdd">@(transition.Translate(759, "Update"))</button>
                <button class="md-btn" ng-click="CloseWindow()">@(transition.Translate(760, "Cancel"))</button>
            </div>
        </div>
    </div>
</div>
<div class="uk-grid">
    <div class="uk-width-1-1 uk-margin-medium-bottom">
        <h3>@(transition.Translate(746, "PlaneRate")) / <span style="font-size: 15px;">@(transition.Translate(761, "Base Rates"))</span></h3>
        <hr />
        <p style="font-size: 12px;">
            @(transition.Translate(762, "tipPlanRate"))
        </p>
        <hr />
    </div>
    <div class="uk-width-1-1 uk-margin-small-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-3">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@(transition.Translate(763, "Key Search"))</b></label>
                        <input ng-model="filters.keySearch" type="text" class="md-input" placeholder="Name">
                        <span class="md-input-bar "></span>
                    </div>
                    <span class="uk-input-group-addon" ng-click="GetData()">
                        <a class="md-btn md-btn-new md-btn-wave-light">@(transition.Translate(764, "Search"))</a>
                    </span>
                </div>
            </div>
            <div class="uk-width-2-3 uk-text-right">
                <button class="md-btn md-btn-new md-btn-wave-light" ng-click="ShowAdd()">@(transition.Translate(765, "Add New"))</button>
            </div>
        </div>
    </div>
    <div class="uk-width-1-1">
        <div ui-grid="gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-move-columns
             ui-grid-pinning ui-grid-pagination ui-grid-exporter class="grid box-grid"></div>
    </div>
</div>
<div id="ModalConfirm" class="uk-modal">
    <div class="uk-modal-dialog">
        <button type="button" class="uk-modal-close uk-close"></button>
        <h2 class="heading_a">@(transition.Translate(766, "Warning!"))</h2>
        <div>
            <div class="uk-grid uk-margin-bottom">
                <div class="uk-width-1">
                    <h4>@(transition.Translate(767, "Are you sure you want to delete this planerate?"))</h4>
                </div>
            </div>
            <div class="uk-grid">
                <div class="uk-width-1 uk-text-right">
                    <button class="md-btn md-btn-danger" ng-click="Delete()">@(transition.Translate(768, "Delete"))</button>
                    <button class="md-btn uk-modal-close uk-close">@(transition.Translate(769, "Cancel"))</button>
                </div>
            </div>
        </div>
    </div>
</div>