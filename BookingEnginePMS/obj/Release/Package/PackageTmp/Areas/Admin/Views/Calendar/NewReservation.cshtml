@using BookingEnginePMS.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<string> countries = (List<string>)ViewData["countries"];
    List<TransitionLanguage> transitions = (List<TransitionLanguage>)Session["transitions"];
    Transition transition = new Transition(transitions);
}
<link href="~/Areas/Admin/Content/css/reservation.css" rel="stylesheet" />
<script src="~/Areas/Admin/Content/js/Calendar/calendar-new-reservation.js"></script>
<script>
    $("#menu_3").addClass('click-menu-top')
</script>
<style>
    .box-div-step {
        padding: 24px 10px 0 10px;
        border: 1px solid #f0f0f0;
        background: #fefefe;
    }
</style>
<div class="uk-grid">
    <div class="uk-width-1-1">
        <div class="uk-grid">
            <div class="uk-width-medium-1 uk-margin-small-bottom">
                <h3>@(transition.Translate(74, "New Reservation")) /<span style="font-size: 15px;">@(transition.Translate(75, "Create New Reservation"))</span></h3>
            </div>
            <div class="uk-width-medium-1">
                <div style="float:right">
                    <div class="uk-grid">
                        <span>
                            <span class="box-step {{Step > 0 ? 'box-step-choose':''}}">
                                <span ng-click="StepReservation(1)">1</span>
                                <span ng-click="StepReservation(1)">@(transition.Translate(77, "Availability"))</span>
                            </span>
                        </span>
                        <span>
                            <span class="box-step {{Step > 1 ? 'box-step-choose':''}}">
                                <span ng-click="StepGuest(2)">2</span>
                                <span ng-click="StepGuest(2)">@(transition.Translate(78, "Guest"))</span>
                            </span>
                        </span>
                        <span>
                            <span class="box-step {{Step > 2 ? 'box-step-choose':''}}">
                                <span ng-click="StepService()">3</span>
                                <span ng-click="StepService()">@(transition.Translate(79, "Service"))</span>
                            </span>
                        </span>
                        <span>
                            <span class="box-step {{Step > 3 ? 'box-step-choose':''}}">
                                <span ng-click="StepConfirm()">4</span>
                                <span ng-click="StepConfirm()">@(transition.Translate(80, "Confirm & Payment"))</span>
                            </span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="uk-width-1-1 uk-margin-small-bottom" ng-cloak>
        <div class="uk-grid" style="margin-left: -20px;">
            <div class="uk-width-1 uk-margin-medium-bottom" style="padding-left: 20px;">
                <hr style="margin:0" />
            </div>
            <div class="uk-width-large-1" style="padding-left: 20px;">
                <div class="{{Step != 1? 'hide-item':''}}">
                    @Html.Partial("~/Areas/Admin/Views/Reservation/New/pStep1.cshtml", transition)
                </div>
                <div class="{{Step != 2? 'hide-item':''}}">
                    @Html.Partial("~/Areas/Admin/Views/Reservation/New/pStep2.cshtml", countries, new ViewDataDictionary { { "transition", transition }, { "guests", ViewData["guests"] }, { "agencies", ViewData["agencies"] } })
                </div>
                <div ng-if="Step == 3">
                    @Html.Partial("~/Areas/Admin/Views/Reservation/New/pStep3.cshtml", transition)
                </div>
                <div ng-if="Step == 4">
                    @Html.Partial("~/Areas/Admin/Views/Reservation/New/pStep4.cshtml", transition)
                </div>
            </div>
        </div>
    </div>
</div>