@using BookingEnginePMS.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSetting.cshtml";
    List<TransitionLanguage> transitions = (List<TransitionLanguage>)Session["transitions"];
    Transition transition = new Transition(transitions);
}
<script>
    $("#PropertyAmenities").addClass("menu-clicked")
</script>
<script>
    $(function () {
        var e = $("#kUI_window")
            , t = $("#kUI_undo");
        if (e.length) {
            var a = e
                , n = t.bind("click", function () {
                    a.data("kendoWindow").open(),
                        n.hide()
                });
            a.data("kendoWindow") || a.kendoWindow({
                width: "600px",
                title: "Information",
                actions: ["Pin", "Minimize", "Maximize", "Close"],
                close: function () {
                    n.show()
                }
            })
        }
    })
</script>
<script src="~/Areas/Admin/Content/js/Amenity/amenity.js"></script>
<div id="kUI_window" style="display:none">
    <div>
        <div class="uk-grid uk-margin-bottom">
            <div class="uk-width-1 uk-margin-medium-bottom">
                <div class="uk-grid">
                    <div class="uk-width-1-2">
                        <label><b>@(transition.Translate(934, "Name")) <span class="star-red">*</span></b></label>
                    </div>
                    <div class="uk-width-1-2 uk-text-right">
                        <div class="box-not-render-span">
                            <select style="margin-bottom: 5px;" ng-click="ChangeLanguage()" ng-model="languageChoose" class="md-input box-language" convert-to-number>
                                <option value="{{item.LanguageId}}" ng-repeat="item in language">
                                    <text>{{item.Title}}</text>
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="uk-width-1">
                        <input ng-click="RefreshValidate()" ng-model="ModelAmenityName.AmenityName" type="text" class="md-input">
                        <span id="err_AmenityName" class="error">@(transition.Translate(935, "Value is invalid!"))</span>
                    </div>
                </div>
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <div class="md-input-wrapper">
                    <label><b>@(transition.Translate(936, "Index"))</b></label>
                    <input ng-click="RefreshValidate()" ng-model="amenity.Index" type="number" min="0" class="md-input" style="max-width: 110px;">
                </div>
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <div class="md-input-wrapper">
                    <label><b>@(transition.Translate(937, "Note"))</b></label>
                    <textarea ng-click="RefreshValidate()" ng-model="amenity.Note" rows="3" class="md-input"></textarea>
                    <span class="md-input-bar "></span>
                </div>
            </div>
        </div>
        <div class="uk-grid box-edit-booking">
            <div class="uk-width-1 uk-text-right" style="padding-right: 50px;">
                <button class="md-btn md-btn-new" ng-click="Post()" ng-if="isAdd">@(transition.Translate(938, "Add"))</button>
                <button class="md-btn md-btn-new" ng-click="Put()" ng-if="!isAdd">@(transition.Translate(939, "Update"))</button>
                <button class="md-btn md-btn-danger" ng-click="CloseWindow()">@(transition.Translate(940, "Cancel"))</button>
            </div>
        </div>
    </div>
</div>
<div class="uk-grid">
    <div class="uk-width-1-1 uk-margin-medium-bottom">
        <h3>@(transition.Translate(941, "Property Amenities"))</h3>
    </div>
    <div class="uk-width-1-1 uk-margin-small-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-3">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@(transition.Translate(942, "Key Search"))</b></label>
                        <input ng-model="filters.keySearch" type="text" class="md-input" placeholder="Name, Note">
                        <span class="md-input-bar "></span>
                    </div>
                    <span class="uk-input-group-addon" ng-click="GetData()">
                        <a class="md-btn md-btn-new md-btn-wave-light">@(transition.Translate(943, "Search"))</a>
                    </span>
                </div>
            </div>
            <div class="uk-width-2-3 uk-text-right">
                <button class="md-btn md-btn-new md-btn-wave-light" ng-click="ShowAdd()">@(transition.Translate(944, "Add New"))</button>
            </div>
        </div>
    </div>
    <div class="uk-width-1-1">
        <div ui-grid="gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-move-columns
             ui-grid-pinning ui-grid-pagination ui-grid-exporter class="grid box-grid"></div>
    </div>
</div>
<div id="ModalConfirm" class="uk-modal">
    <div class="uk-modal-dialog">
        <button type="button" class="uk-modal-close uk-close"></button>
        <h2 class="heading_a">@(transition.Translate(945, "Warning!"))</h2>
        <div>
            <div class="uk-grid uk-margin-bottom">
                <div class="uk-width-1">
                    <h4>@(transition.Translate(946, "Are you sure you want to delete this amenity?"))</h4>
                </div>
            </div>
            <div class="uk-grid">
                <div class="uk-width-1 uk-text-right">
                    <button class="md-btn md-btn-danger" ng-click="Delete()">@(transition.Translate(947, "Delete"))</button>
                    <button class="md-btn uk-modal-close uk-close">@(transition.Translate(948, "Cancel"))</button>
                </div>
            </div>
        </div>
    </div>
</div>
