@using BookingEnginePMS.Models;
@model Transition
<div>
    <div class="uk-grid uk-grid-collapse">
        <div class="uk-width-large-7-10">
            <div class="md-card md-card-single main-print" id="invoice">
                <div class="md-card-toolbar">
                    <div class="uk-grid">
                        <div class="uk-width-1-1">
                            <div class="md-card-toolbar-actions hidden-print">
                                <i class="md-icon material-icons" ng-if="showInvoice" ng-click="printInvoice()">&#xE8ad;</i>
                            </div>
                            <h4 class="md-card-toolbar-heading-text">
                                @Model.Translate(359, "Invoice")
                            </h4>
                        </div>
                        <div class="uk-width-1-1 uk-margin-large-bottom" ng-if="showInvoice">
                            <div style="overflow:auto" ng-cloak id="Invoice">
                                @Html.Partial("~/Areas/Admin/Views/Reservation/Edit/BookingDetail/pInvoiceDetail.cshtml", Model)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-width-large-3-10">
            <div class="md-list-outside-wrapper">
                <div class="md-list-outside-inner">
                    <ul class="md-list md-list-outside invoices_list">
                        <li ng-click="OpenInvoice(item.InvoiceBookingId)" ng-repeat="item in bookingdetail.InvoiceBookings">
                            <a href="#" class="md-list-content">
                                <span class="md-list-heading uk-text-truncate">
                                    {{item.Title}}
                                    <span class="uk-text-small uk-text-muted">{{item.CreateDate | date: 'dd/MM/yyyy HH:mm:ss'}}</span>
                                </span>
                                <span class="uk-text-small uk-text-muted"> {{item.UserCreate}}</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .md-list-outside-wrapper ul li:focus {
        background-color: red !important
    }
</style>