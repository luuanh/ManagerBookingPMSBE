@using BookingEnginePMS.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSetting.cshtml";
    List<TransitionLanguage> transitions = (List<TransitionLanguage>)Session["transitions"];
    Transition transition = new Transition(transitions);
}
<script>
    $("#Policies").addClass("menu-clicked")
</script>
<script>
    $(function () {
        var e = $("#kUI_window")
            , t = $("#kUI_undo");
        if (e.length) {
            var a = e
                , n = t.bind("click", function () {
                    a.data("kendoWindow").open(),
                        n.hide()
                });
            a.data("kendoWindow") || a.kendoWindow({
                width: "600px",
                title: "Information",
                actions: ["Pin", "Minimize", "Maximize", "Close"],
                close: function () {
                    n.show()
                }
            })
        }
    })
</script>
<style>
    input[type=checkbox] {
        position: absolute;
    }
</style>
<script src="~/Areas/Admin/Content/js/Policy/policy.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>
<div id="kUI_window" style="display:none">
    <div>
        <div class="uk-grid uk-margin-medium-bottom">
            <div class="uk-width-1 uk-margin-bottom">
                <h3>@(transition.Translate(1049, "Policy Information"))</h3>
                <hr />
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <div class="md-input-wrapper">
                    <div class="uk-grid">
                        <div class="uk-width-1-2">
                            <label><b>@(transition.Translate(1050, "Name")) <span class="star-red">*</span></b></label>
                        </div>
                        <div class="uk-width-1-2 uk-text-right">
                            <select style="margin-bottom:5px" ng-click="ChangeLanguage()" ng-model="languageChoose" class="md-input box-language" convert-to-number>
                                <option value="{{item.LanguageId}}" ng-repeat="item in language">
                                    <text>{{item.Title}}</text>
                                </option>
                            </select>
                        </div>
                        <div class="uk-width-1">
                            <input ng-click="RefreshValidate()" id="PolicyName" type="text" class="md-input">
                            <span class="md-input-bar "></span>
                            <span id="err_PolicyName" class="error">@(transition.Translate(1051, "Value is invalid!"))</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="uk-width-1-3 uk-margin-medium-bottom">
                <div class="md-input-wrapper">
                    <label><b>@(transition.Translate(1052, "Index"))</b></label>
                    <input ng-click="RefreshValidate()" ng-model="policy.Index" type="number" min="0" class="md-input">
                    <span id="err_Index" class="error">@(transition.Translate(1051, "Value is invalid!"))</span>
                </div>
            </div>
            <div class="uk-width-2-3 uk-margin-medium-bottom" style="margin-top: -15px;">
                <div style="position: relative;">
                    <label><b>@(transition.Translate(1053, "RequirePrice"))</b></label>
                    <input ng-click="RefreshValidate()" ng-model="policy.RequirePrice" type="checkbox">
                </div>
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <div class="md-input-wrapper">
                    <div class="uk-grid">
                        <div class="uk-width-1-2">
                            <label><b>@(transition.Translate(1054, "Note"))</b></label>
                        </div>
                        <div class="uk-width-1-2 uk-text-right">
                            <select ng-click="ChangeLanguage()" ng-model="languageChoose" class="md-input box-language" convert-to-number>
                                <option value="{{item.LanguageId}}" ng-repeat="item in language">
                                    <text>{{item.Title}}</text>
                                </option>
                            </select>
                        </div>
                        <div class="uk-width-1 uk-margin-top">
                            <textarea id="contentPolicy"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-grid">
            <div class="uk-width-1 uk-text-right">
                <button class="md-btn md-btn-new" ng-click="Post()" ng-if="isAdd">@(transition.Translate(1055, "Add"))</button>
                <button class="md-btn md-btn-new" ng-click="Put()" ng-if="!isAdd">@(transition.Translate(1056, "Update"))</button>
                <button class="md-btn md-btn-danger" ng-click="CloseWindow()">@(transition.Translate(1057, "Cancel"))</button>
            </div>
        </div>
    </div>
</div>
<div class="uk-grid">
    <div class="uk-width-1-1 uk-margin-medium-bottom">
        <h3>@(transition.Translate(1058, "Policies"))</h3>
        <hr />
        <p>
            @(transition.Translate(1059, "tipPolicy"))
        </p>
        <hr />
    </div>
    <div class="uk-width-1-1 uk-margin-small-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-3">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@(transition.Translate(1060, "Key Search"))</b></label>
                        <input ng-model="filters.keySearch" type="text" class="md-input" placeholder="Name, Note">
                        <span class="md-input-bar "></span>
                    </div>
                    <span class="uk-input-group-addon" ng-click="GetData()">
                        <a class="md-btn md-btn-new md-btn-wave-light">@(transition.Translate(1061, "Search"))</a>
                    </span>
                </div>
            </div>
            <div class="uk-width-2-3 uk-text-right">
                <button class="md-btn md-btn-new md-btn-wave-light" ng-click="ShowAdd()">@(transition.Translate(1062, "Add New"))</button>
            </div>
        </div>
    </div>
    <div class="uk-width-1-1">
        <div ui-grid="gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-move-columns
             ui-grid-pinning ui-grid-pagination ui-grid-exporter class="grid box-grid"></div>
    </div>
</div>
<div id="ModalConfirm" class="uk-modal">
    <div class="uk-modal-dialog">
        <button type="button" class="uk-modal-close uk-close"></button>
        <h2 class="heading_a">@(transition.Translate(1063, "Warning!"))</h2>
        <div>
            <div class="uk-grid uk-margin-bottom">
                <div class="uk-width-1">
                    <h4>@(transition.Translate(1064, "Are you sure you want to delete this amenity?"))</h4>
                </div>
            </div>
            <div class="uk-grid">
                <div class="uk-width-1 uk-text-right">
                    <button class="md-btn md-btn-danger" ng-click="Delete()">@(transition.Translate(1065, "Delete"))</button>
                    <button class="md-btn uk-modal-close uk-close">@(transition.Translate(1057, "Cancel"))</button>
                </div>
            </div>
        </div>
    </div>
</div>