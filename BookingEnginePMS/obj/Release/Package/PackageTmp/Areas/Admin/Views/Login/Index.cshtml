@using BookingEnginePMS.Models
@{
    Layout = null;
    List<Language> languages = (List<Language>)ViewData["languages"];
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="msapplication-tap-highlight" content="no" />
    <link rel="icon" type="image/png" href="~/assets/img/favicon-16x16.png" sizes="16x16">
    <link rel="icon" type="image/png" href="~/assets/img/favicon-32x32.png" sizes="32x32">
    <title>Login</title>
    <link href="~/Areas/Admin/Content/css/cssLogin.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/bower_components/uikit/css/uikit.almost-flat.min.css" />
    <link rel="stylesheet" href="~/assets/css/login_page.min.css" />
    <script src="~/Areas/Admin/Content/js/AngularJs/angular.js"></script>
    <script src="~/Areas/Admin/Content/js/Login/login.js"></script>
    <style>
        .error {
            color: red;
            display: none;
            padding-top: 5px;
            font-size: 13px;
            padding-left: 4px;
        }

        #loader {
            border: 5px solid #d1d8f0;
            border-radius: 50%;
            border-top: 5px solid #1166a0;
            border-bottom: 5px solid #1166a0;
            width: 40px;
            height: 40px;
            animation: spin 2s linear infinite;
            z-index: 10005;
            top: 40%;
            left: 50%;
            position: fixed;
            display: none;
        }

        @@-webkit-keyframes spin {
            0% {
                -webkit-transform: rotate(0deg);
            }

            100% {
                -webkit-transform: rotate(360deg);
            }
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<body class="login_page login_page_v2" ng-app="app" ng-controller="controller">
    <div>
        <span>@Session["updateSystem"]</span>
    </div>
    <div class="uk-container uk-container-center">
        <div class="md-card">
            <div class="md-card-content padding-reset">
                <div class="uk-grid uk-grid-collapse">
                    <div class="uk-width-large-2-3 uk-hidden-medium uk-hidden-small">
                        <div class="login_page_info uk-height-1-1" style="background-image: url('/assets/img/others/helloquence-61189.jpg')">
                            <div class="info_content">
                                <h1 class="heading_b">Booking Engine PMS</h1>
                                <p> Giải pháp quản lý khách sạn và bán phòng trực tuyến tốt nhất hiện nay</p>
                            </div>
                        </div>
                    </div>
                    <div class="uk-width-large-1-3 uk-width-medium-2-3 uk-container-center" style="padding-bottom: 30px;min-height: 390px;">
                        <div class="login_page_forms">
                            <div id="login_card">
                                <div id="login_form">
                                    <div class="login_heading uk-margin-large-bottom">
                                        <img src="~/assets/img/LOGO-IIT.png" />
                                    </div>
                                    <div>
                                        <div class="uk-form-row">
                                            <label>UserName</label>
                                            <input ng-click="RefreshValidate()" ng-model="data.UserName" class="md-input label-fixed" required type="text" name="UserName" />
                                            <span id="err_UserName" class="error">Value is invalid!</span>
                                        </div>
                                        <div class="uk-form-row">
                                            <label>Password</label>
                                            <input ng-click="RefreshValidate()" ng-model="data.Password" class="md-input label-fixed" required type="password" name="Password" />
                                            <span id="err_Password" class="error">Value is invalid!</span>
                                        </div>
                                        <div class="uk-form-row">
                                            <div class="uk-input-group">
                                                <div class="md-input-wrapper">
                                                    <label style="font-size: 12px;top: -6px !important;">Code</label>
                                                    <input ng-click="RefreshValidate()" ng-model="Code" required type="text" class="md-input label-fixed">
                                                    <span class="md-input-bar "></span>
                                                    <span id="err_Code" class="error">Value is invalid!</span>
                                                </div>
                                                <span class="uk-input-group-addon" style="padding: 0;">
                                                    <button class="md-btn md-btn-primary md-btn-mini" ng-click="getHotel($event)">Check</button>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="uk-form-row uk-text-center">
                                            <span style="font-size: 13px;color: #1a30d8;">{{hotels[0].GroupHotelName}}</span>
                                        </div>
                                        <div class="uk-form-row">
                                            <label for="login_password">Property</label>
                                            <select ng-click="RefreshValidate()" ng-model="HotelId" class="md-input" name="HotelId" style="font-size: 14px;" convert-to-number>
                                                <option value="-1" disabled>--- Select Hotel ---</option>
                                                <option value="{{item.HotelId}}" ng-repeat="item in hotels">{{item.Name}}</option>
                                            </select>
                                        </div>
                                        <div class="uk-form-row">
                                            <label for="login_password">Language</label>
                                            <select ng-click="RefreshValidate()" class="md-input" name="LanguageId" style="font-size: 14px;">
                                                @foreach (Language language in languages)
                                                {
                                                    <option value="@language.LanguageId">@language.Title</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="uk-form-row">
                                            <span style="font-size: 13px;color: red;">{{error}}</span>
                                        </div>
                                        <div>
                                            <button ng-click="login()" class="md-btn md-btn-primary md-btn-block md-btn-large">Sign In</button>
                                        </div>
                                        <div class="uk-margin-top">
                                            <a href="#" id="password_reset_show" class="uk-float-right">Forgotten password?</a>
                                        </div>
                                        <div style="clear:both">
                                            <div class="uk-grid">
                                                <div class="uk-width-1 uk-margin-top uk-text-center">
                                                    <p style="font-size: 14px;color: #124771;">Công ty TNHH Công Nghệ Và Truyền Thông IIT</p>
                                                </div>
                                                <div class="uk-width-1-2 uk-margin-small-bottom">
                                                    <span class="uk-icon-hover uk-icon-envelope-o" style="font-size: 14px;color: #124771;">
                                                        info@asiky.com
                                                    </span>
                                                </div>
                                                <div class="uk-width-1-2 uk-margin-small-bottom">
                                                    <span class="uk-icon-hover uk-icon-phone" style="font-size: 14px;color: #124771;">
                                                        024 6259 8807
                                                    </span>
                                                </div>
                                                <div class="uk-width-1-2 uk-margin-small-bottom">
                                                    <span class="uk-icon-hover uk-icon-wechat" style="font-size: 16px;color: #124771;text-decoration: underline;color: #12479f;">
                                                        <a href="#">Live chat</a>
                                                    </span>
                                                </div>
                                                <div class="uk-width-1-2 uk-margin-small-bottom">
                                                    <span class="uk-icon-hover uk-icon-globe" style="font-size: 14px;color: #124771;">
                                                        www.asiky.com
                                                    </span>
                                                </div>
                                                <div class="uk-width-1 uk-text-center">
                                                    <span style="font-size: 12px;color: #124771;">Copyright © Asiky. 2015 All Rights Reserved Vision1.0</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="login_password_reset" style="display: none">
                                    <button type="button" class="uk-position-top-right uk-close uk-margin-right back_to_login"></button>
                                    <h2 class="heading_a uk-margin-large-bottom">Reset password</h2>
                                    <form method="post" action="/Login/ResetPassword">
                                        <div class="uk-form-row">
                                            <label for="login_email_reset">UserName</label>
                                            <input class="md-input label-fixed" type="text" name="Email" />
                                        </div>
                                        <div class="uk-form-row">
                                            <label for="login_email_reset">Your email address</label>
                                            <input class="md-input label-fixed" type="text" name="Email" />
                                        </div>
                                        <div class="uk-margin-medium-top">
                                            <button type="submit" class="md-btn md-btn-primary md-btn-block">Reset password</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="loader" style="display: none;"></div>
    <script src="~/assets/js/common.min.js"></script>
    <script src="~/assets/js/uikit_custom.min.js"></script>
    <script src="~/assets/js/altair_admin_common.min.js"></script>
    <script src="~/assets/js/pages/login.min.js"></script>
    <script>
        if (typeof (Storage) !== "undefined") {
            var root = document.getElementsByTagName('html')[0],
                theme = localStorage.getItem("altair_theme");
            if (theme == 'app_theme_dark' || root.classList.contains('app_theme_dark')) {
                root.className += ' app_theme_dark';
            }
        }</script>
</body>
</html>