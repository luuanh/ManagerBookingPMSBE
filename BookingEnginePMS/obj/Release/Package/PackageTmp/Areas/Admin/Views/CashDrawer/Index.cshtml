@using BookingEnginePMS.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<TransitionLanguage> transitions = (List<TransitionLanguage>)Session["transitions"];
    Transition transition = new Transition(transitions);
}
<script>
    $("#menu_9").addClass('click-menu-top')
</script>
<script>
    $(function () {
        var e = $("#kUI_window")
            , t = $("#kUI_undo");
        if (e.length) {
            var a = e
                , n = t.bind("click", function () {
                    a.data("kendoWindow").open(),
                        n.hide()
                });
            a.data("kendoWindow") || a.kendoWindow({
                width: "600px",
                title: "Information",
                actions: ["Pin", "Minimize", "Maximize", "Close"],
                close: function () {
                    n.show()
                }
            })
        }
    })
</script>
<script src="~/Areas/Admin/Content/js/CashDrawer/cash-drawer.js"></script>
<div id="kUI_window" style="display:none">
    <div>
        <div class="uk-grid uk-margin-bottom">
            <div class="uk-width-1 uk-margin-medium-bottom">
                <h2>@(transition.Translate(829, "Add Cash Drawer"))</h2>
                <hr />
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <div class="uk-grid">
                    <div class="uk-width-1-2">
                        <div class="md-input-wrapper">
                            <label><b>@(transition.Translate(830, "Name")) <span class="star-red">*</span></b></label>
                            <input ng-click="RefreshValidate()" ng-model="cashdrawer.Name" type="text" class="md-input" />
                            <span class="md-input-bar "></span>
                            <span id="err_Name" class="error">@(transition.Translate(831, "Value is invalid!"))</span>
                        </div>
                    </div>
                    <div class="uk-width-1-2">
                        <div class="uk-input-group">
                            <div class="md-input-wrapper">
                                <label><b>@(transition.Translate(832, "Starting Balance")) <span class="star-red">*</span></b></label>
                                <input ng-click="RefreshValidate()" ng-model="cashdrawer.LastBalance" type="text" class="md-input" />
                                <span class="md-input-bar "></span>
                                <span id="err_LastBalance" class="error">@(transition.Translate(831, "Value is invalid!"))</span>
                            </div>
                            <span class="uk-input-group-addon">
                                <span>₫</span>
                            </span>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="uk-grid">
            <div class="uk-width-1 box-edit-booking uk-text-right">
                <button class="md-btn md-btn-new md-btn-wave-light" ng-click="Post()" ng-if="isAdd">@(transition.Translate(833, "Add"))</button>
                <button class="md-btn md-btn-new md-btn-wave-light" ng-click="Put()" ng-if="!isAdd">@(transition.Translate(834, "Update"))</button>
                <button class="md-btn md-btn-danger md-btn-wave-light" ng-click="CloseWindow()">@(transition.Translate(835, "Cancel"))</button>
            </div>
        </div>
    </div>
</div>
<div class="uk-grid">
    <div class="uk-width-1-1 uk-margin-medium-bottom">
        <h3>@(transition.Translate(836, "Cash Drawers"))</h3>
        <hr />
        <p style="font-size: 12px;">
            @(transition.Translate(837, "tipCashDrawer"))
        </p>
        <hr />
    </div>
    <div class="uk-width-1-1 uk-margin-small-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-3">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@(transition.Translate(838, "Key Search"))</b></label>
                        <input ng-model="filters.keySearch" type="text" class="md-input" placeholder="Name">
                        <span class="md-input-bar "></span>
                    </div>
                    <span class="uk-input-group-addon" ng-click="GetData()">
                        <a class="md-btn md-btn-new md-btn-wave-light">@(transition.Translate(839, "Search"))</a>
                    </span>
                </div>
            </div>
            <div class="uk-width-2-3 uk-text-right">
                <button class="md-btn md-btn-new md-btn-wave-light" ng-click="ShowAdd()">@(transition.Translate(840, "Add New"))</button>
            </div>
        </div>
    </div>
    <div class="uk-width-1-1">
        <div ui-grid="gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-move-columns
             ui-grid-pinning ui-grid-pagination ui-grid-exporter class="grid box-grid"></div>
    </div>
</div>
<div id="ModalConfirm" class="uk-modal">
    <div class="uk-modal-dialog">
        <button type="button" class="uk-modal-close uk-close"></button>
        <h2 class="heading_a">@(transition.Translate(841, "Warning!"))</h2>
        <div>
            <div class="uk-grid uk-margin-bottom">
                <div class="uk-width-1">
                    <h4>@(transition.Translate(842, "Are you sure you want to delete this cash drawer?"))</h4>
                </div>
            </div>
            <div class="uk-grid">
                <div class="uk-width-1 uk-text-right">
                    <button class="md-btn md-btn-danger" ng-click="Delete()">@(transition.Translate(843, "Delete"))</button>
                    <button class="md-btn uk-modal-close uk-close">@(transition.Translate(835, "Cancel"))</button>
                </div>
            </div>
        </div>
    </div>
</div>
