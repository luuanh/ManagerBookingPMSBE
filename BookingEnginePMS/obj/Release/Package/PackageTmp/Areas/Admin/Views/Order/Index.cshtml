@using BookingEnginePMS.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<TransitionLanguage> transitions = (List<TransitionLanguage>)Session["transitions"];
    Transition transition = new Transition(transitions);
}
<script>
    $("#menu_4").addClass('click-menu-top')
</script>
<script src="~/Areas/Admin/Content/js/Order/order.js"></script>

<div class="uk-grid">
    <div class="uk-width-1-1 uk-margin-medium-bottom">
        <h3 style="display: inline-block;margin-right: 10px;">@(transition.Translate(345, "Orders"))</h3>
        <a href="/Admin/Order/NewOrder" class="md-btn md-btn-new">@(transition.Translate(346, "Add New Order"))</a>
        <hr>
    </div>
    <div class="uk-width-1-1">
        <div class="uk-grid">
            <div class="uk-width-large-1-6 uk-width-medium-1-3 uk-margin-medium-bottom">
                <div class="md-input-wrapper">
                    <label><b>@(transition.Translate(347, "Status"))</b></label>
                    <select ng-model="filters.status" class="md-input" convert-to-number>
                        <option value="-1">@(transition.Translate(348, "All"))</option>
                        <option value="1">@(transition.Translate(349, "Paid"))</option>
                        <option value="0">@(transition.Translate(350, "UnPaid"))</option>
                    </select>
                    <span class="md-input-bar "></span>
                </div>
            </div>
            <div class="uk-width-large-1-6 uk-width-medium-1-3 uk-margin-medium-bottom">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@(transition.Translate(351, "From date"))</b></label>
                        <input id="FromDate" data-uk-datepicker="{format:'DD-MM-YYYY'}" autocomplete="off" ng-model="FromDate" type="text" class="md-input">
                        <span class="md-input-bar "></span>
                    </div>
                    <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar"></i></span>
                </div>
            </div>
            <div class="uk-width-large-1-6 uk-width-medium-1-3 uk-margin-medium-bottom">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@(transition.Translate(352, "To date"))</b></label>
                        <input id="ToDate" data-uk-datepicker="{format:'DD-MM-YYYY'}" autocomplete="off" ng-model="ToDate" type="text" class="md-input">
                        <span class="md-input-bar "></span>
                    </div>
                    <span class="uk-input-group-addon"><i class="uk-input-group-icon uk-icon-calendar"></i></span>
                </div>
            </div>
            <div class="uk-width-large-2-6 uk-width-medium-1">
                <div class="uk-grid">
                    <div class="uk-width-medium-1 uk-margin-bottom">
                        <div class="uk-input-group">
                            <div class="md-input-wrapper">
                                <label><b>@(transition.Translate(353, "Key Search"))</b></label>
                                <input ng-model="filters.keySearch" type="text" class="md-input" placeholder="guest's name">
                                <span class="md-input-bar "></span>
                            </div>
                            <span class="uk-input-group-addon" ng-click="GetData()" style="padding: 0 5px;">
                                <a class="md-btn md-btn-new md-btn-wave-light">@(transition.Translate(354, "Search"))</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="uk-width-1-1">
        <div ui-grid="gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-move-columns
             ui-grid-pinning ui-grid-pagination ui-grid-exporter class="grid box-grid"></div>
    </div>
</div>