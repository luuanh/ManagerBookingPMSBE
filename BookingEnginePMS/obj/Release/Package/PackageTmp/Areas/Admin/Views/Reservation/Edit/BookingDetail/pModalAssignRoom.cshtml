@using BookingEnginePMS.Models;
@model Transition
<div id="ModalAssignRoom" class="uk-modal">
    <div class="uk-modal-dialog">
        <button type="button" class="uk-modal-close uk-close"></button>
        <h2 class="heading_a">@Model.Translate(565, "Room Information")</h2>
        <div>
            <div class="uk-grid uk-margin-bottom">
                <div class="uk-width-1-2 uk-margin-bottom" style="margin-top: -10px;">
                    <label class="lable-config"><b>@Model.Translate(369, "Check In")</b></label>
                    <div style="height: 25px;line-height: 30px;padding-left: 5px;">
                        <p style="margin: 0;font-size: 16px;font-weight: bold;">
                            {{bookingdetail.ArrivalDate | date:'dd/MM/yyyy HH:mm'}}
                        </p>
                    </div>
                </div>
                <div class="uk-width-1-2 uk-margin-bottom" style="margin-top: -10px;">
                    <label class="lable-config"><b>@Model.Translate(371, "Check Out")</b></label>
                    <div style="height: 25px;line-height: 30px;padding-left: 5px;">
                        <p ng-if="bookingdetail.TypeBooking == 0 || bookingdetail.Status == 3 || bookingdetail.Status == 6" style="margin: 0;font-size: 16px;font-weight: bold;">
                            {{bookingdetail.DepartureDate | date:'dd/MM/yyyy HH:mm'}}
                        </p>
                        <p ng-if="bookingdetail.TypeBooking == 1 && bookingdetail.Status != 3 && bookingdetail.Status != 6" style="margin: 0;font-size: 16px;font-weight: bold;">
                            ___________________
                        </p>
                    </div>
                </div>
                <div class="uk-width-1-2 uk-margin-bottom" style="margin-top: -10px;">
                    <label class="lable-config"><b>@Model.Translate(382, "Accommodation")</b></label>
                    <div>
                        <select ng-change="GetRoomAvailable()" class="md-input" ng-model="bookingdetail.RoomTypeId" convert-to-number>
                            <option value="{{item.RoomTypeId}}" ng-repeat="item in RoomAvailable.roomTypes">
                                {{item.RoomTypeName}}
                            </option>
                        </select>
                    </div>
                </div>
                <div class="uk-width-1-2 uk-margin-bottom" style="margin-top: -10px;">
                    <label class="lable-config"><b>@Model.Translate(415, "Room")</b></label>
                    <div>
                        <select class="md-input" ng-model="roomIdCurrent" convert-to-number>
                            <option value="-1">N/A</option>
                            <option value="{{item.RoomId}}" ng-repeat="item in RoomAvailable.rooms">
                                {{item.RoomCode}}
                            </option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="uk-grid">
                <div class="uk-width-1 uk-text-right">
                    <button class="md-btn md-btn-new md-btn-wave-light" ng-click="AssignRoom()">@Model.Translate(385, "Confirm")</button>
                    <button class="md-btn uk-modal-close uk-close md-btn-wave-light">@Model.Translate(386, "Close")</button>
                </div>
            </div>
        </div>
    </div>
</div>
