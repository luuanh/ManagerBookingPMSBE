@using BookingEnginePMS.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSetting.cshtml";
    List<TransitionLanguage> transitions = (List<TransitionLanguage>)Session["transitions"];
    Transition transition = new Transition(transitions);
}
<script>
    $("#Currency").addClass("menu-clicked")
</script>
<style>
    select, input[type=text] {
        border: 1px solid rgba(0,0,0,.12);
        padding: 5px 5px 5px 10px;
        width: 150px
    }
</style>
<script src="~/Areas/Admin/Content/js/Currency/currency.js"></script>
<div class="uk-grid">
    <div class="uk-width-1-1 uk-margin-medium-bottom">
        <h3>@(transition.Translate(1274, "Currency"))</h3>
        <hr />
        <p style="font-size: 12px;">
            @(transition.Translate(1275, "tipCurrency"))
        </p>
        <hr />
    </div>
    <div class="uk-width-1-1 uk-margin-small-bottom">
        <div class="uk-grid">
            <div class="uk-width-1 uk-margin-bottom" ng-cloak>
                <select ng-change="GetData()" ng-model="filter.typeCurrency">
                    <option value="{{item.CurrencyCode}}" ng-repeat="item in currencies">{{item.CurrencyCode}} ({{item.Key}})</option>
                </select>
                <span>
                    <i class="uk-icon-arrows-h"></i>
                </span>
                <select>
                    <option>VND</option>
                </select>
                <button ng-click="GetData()" class="md-btn md-btn-new"><i class="uk-icon-arrow-right"></i></button>
                <button ng-click="GetValueConvertCurrentFromBank()" class="md-btn md-btn-new">Get data from the bank</button>
            </div>
            <div class="uk-width-1 uk-margin-medium-bottom">
                <p>Kết quả</p>
                <div class="uk-grid" ng-if="convertStarted" ng-cloak>
                    <div class="uk-width-1 uk-margin-small-bottom">
                        <b>1 {{filter.typeCurrency}} = <input type="text" ng-model="data.Result" /> VND </b>
                    </div>
                    <div class="uk-width-1">
                        <label>
                            <input type="checkbox" ng-model="data.AutoCalculator" />
                            <span>Automatically retrieve data from the bank</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="uk-width-1" ng-if="convertStarted" ng-cloak>
                <button class="md-btn md-btn-new" ng-click="Put()">Update</button>
            </div>
        </div>
    </div>
</div>