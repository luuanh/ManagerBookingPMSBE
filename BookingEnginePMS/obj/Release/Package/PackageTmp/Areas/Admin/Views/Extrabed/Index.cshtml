@using BookingEnginePMS.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSetting.cshtml";
    List<TransitionLanguage> transitions = (List<TransitionLanguage>)Session["transitions"];
    Transition transition = new Transition(transitions);
}
<script>
    $("#PropertyExtrabed").addClass("menu-clicked")
</script>
<script>
    $(function () {
        var e = $("#kUI_window")
            , t = $("#kUI_undo");
        if (e.length) {
            var a = e
                , n = t.bind("click", function () {
                    a.data("kendoWindow").open(),
                        n.hide()
                });
            a.data("kendoWindow") || a.kendoWindow({
                width: "600px",
                title: "Information",
                actions: ["Pin", "Minimize", "Maximize", "Close"],
                close: function () {
                    n.show()
                }
            })
        }
    })
</script>
<script src="~/ckfinder/ckfinder.js"></script>
<script src="~/Areas/Admin/Content/js/Extrabed/extrabed.js"></script>
<div id="kUI_window" style="display:none">
    <div>
        <div class="uk-grid uk-margin-bottom">
            <div class="uk-width-medium-1-3 uk-text-center uk-margin-medium-bottom">
                <label style="margin-bottom: 10px;display: block;">
                    <b>@(transition.Translate(974, "Image"))</b>
                </label>
                <img ng-model="extrabed.Image" id="img-logo" ng-src="{{extrabed.Image}}" />
                <input ng-model="extrabed.Image" id="Logo" style="display:none;" name="Logo" class="upload">
            </div>
            <div class="uk-width-medium-2-3">
                <div class="uk-grid">
                    <div class="uk-width-1">
                        <div class="uk-grid">
                            <div class="uk-width-1 uk-margin-medium-bottom">
                                <div class="uk-grid">
                                    <div class="uk-width-1-2">
                                        <label style="color: #727272;font-size: 12px;display: block;padding-left: 5px;"><b>@(transition.Translate(975, "Name")) <span class="star-red">*</span></b></label>
                                    </div>
                                    <div class="uk-width-1-2 uk-text-right">
                                        <select ng-click="ChangeLanguage()" ng-model="languageChoose" class="box-language md-input" convert-to-number>
                                            <option value="{{item.LanguageId}}" ng-repeat="item in language">
                                                <text>{{item.Title}}</text>
                                            </option>
                                        </select>
                                    </div>
                                    <div class="uk-width-1">
                                        <input ng-click="RefreshValidate()" ng-model="ModelExtrabed.ExtrabedName" type="text" class="md-input">
                                        <span class="md-input-bar "></span>
                                        <span id="err_ExtrabedName" class="error">@(transition.Translate(976, "Value is invalid!"))</span>
                                    </div>
                                </div>
                            </div>
                            <div class="uk-width-1-2 uk-margin-medium-bottom">
                                <div class="uk-input-group">
                                    <div class="md-input-wrapper">
                                        <label><b>@(transition.Translate(977, "Price")) <span class="star-red">*</span></b></label>
                                        <input ng-click="RefreshValidate()" ng-model="extrabed.Price" type="text" class="md-input">
                                        <span class="md-input-bar "></span>
                                        <span id="err_Price" class="error">@(transition.Translate(976, "Value is invalid!"))</span>
                                    </div>
                                    <span class="uk-input-group-addon">
                                        <a style="color:black !important">₫</a>
                                    </span>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="uk-width-1">
                        <div class="uk-grid">
                            <div class="uk-width-1 uk-margin-medium-bottom">
                                <div class="uk-grid">
                                    <div class="uk-width-1-2">
                                        <label style="color: #727272;font-size: 12px;display: block;padding-left: 5px;"><b>@(transition.Translate(978, "Description"))</b></label>
                                    </div>
                                    <div class="uk-width-1-2 uk-text-right">
                                        <select ng-click="ChangeLanguage()" ng-model="languageChoose" class="box-language md-input" convert-to-number>
                                            <option value="{{item.LanguageId}}" ng-repeat="item in language">
                                                <text>{{item.Title}}</text>
                                            </option>
                                        </select>
                                    </div>
                                    <div class="uk-width-1">
                                        <textarea ng-click="RefreshValidate()" ng-model="ModelExtrabed.Description" rows="3" class="md-input"></textarea>
                                        <span class="md-input-bar "></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-grid box-edit-booking">
            <div class="uk-width-1 uk-text-right" style="padding-right: 50px;">
                <button class="md-btn md-btn-new" ng-click="Post()" ng-if="isAdd">@(transition.Translate(979, "Add"))</button>
                <button class="md-btn md-btn-new" ng-click="Put()" ng-if="!isAdd">@(transition.Translate(980, "Update"))</button>
                <button class="md-btn md-btn-danger" ng-click="CloseWindow()">@(transition.Translate(981, "Cancel"))</button>
            </div>
        </div>
    </div>
</div>
<div class="uk-grid">
    <div class="uk-width-1-1 uk-margin-medium-bottom">
        <h3>@(transition.Translate(982, "Property Extrabed"))</h3>
    </div>
    <div class="uk-width-1-1 uk-margin-small-bottom">
        <div class="uk-grid">
            <div class="uk-width-1-3">
                <div class="uk-input-group">
                    <div class="md-input-wrapper">
                        <label><b>@(transition.Translate(983, "Key Search"))</b></label>
                        <input ng-model="filters.keySearch" type="text" class="md-input" placeholder="Name, Description">
                        <span class="md-input-bar "></span>
                    </div>
                    <span class="uk-input-group-addon" ng-click="GetData()">
                        <a class="md-btn md-btn-new md-btn-wave-light">@(transition.Translate(984, "Search"))</a>
                    </span>
                </div>
            </div>
            <div class="uk-width-2-3 uk-text-right">
                <button class="md-btn md-btn-new md-btn-wave-light" ng-click="ShowAdd()">@(transition.Translate(985, "Add New"))</button>
            </div>
        </div>
    </div>
    <div class="uk-width-1-1">
        <div ui-grid="gridOptions" ui-grid-selection ui-grid-resize-columns ui-grid-move-columns
             ui-grid-pinning ui-grid-pagination ui-grid-exporter class="grid box-grid"></div>
    </div>
</div>
<div id="ModalConfirm" class="uk-modal">
    <div class="uk-modal-dialog">
        <button type="button" class="uk-modal-close uk-close"></button>
        <h2 class="heading_a">@(transition.Translate(986, "Warning!"))</h2>
        <div>
            <div class="uk-grid uk-margin-bottom">
                <div class="uk-width-1">
                    <h4>@(transition.Translate(987, "Are you sure you want to delete this extrabed?"))</h4>
                </div>
            </div>
            <div class="uk-grid">
                <div class="uk-width-1 uk-text-right">
                    <button class="md-btn md-btn-danger" ng-click="Delete()">@(transition.Translate(988, "Delete"))</button>
                    <button class="md-btn uk-modal-close uk-close">@(transition.Translate(981, "Cancel"))</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        if (!$('.button-upload').length > 0) {
            var upload;
            var textBox = $('.upload');
            for (var i = 0; i < textBox.length; i++) {
                var uploadText = $(textBox[i]);
                uploadText.css('width', uploadText.width() - 70);
                uploadText.after('<button type="button" for="' + uploadText.attr('id') + '" class="button-upload md-btn md-btn-new md-btn-wave-light">@(transition.Translate(989, "Upload"))</button>');
                $('.button-upload').click(function () {
                    upload = $(this);
                    // You can use the "CKFinder" class to render CKFinder in a page:
                    var finder = new CKFinder();
                    finder.basePath = '../files';
                    finder.selectActionFunction = setFileField;
                    finder.popup();
                });
                function setFileField(fileUrl) {
                    $('#' + $(upload).attr('for')).val(fileUrl);
                    $("#img-logo").attr("src", fileUrl)
                }
            }
        }
    })

</script>