@using BookingEnginePMS.Models;
@model Transition
<style>
    .user-note {
        font-weight: 600;
    }

    .box-note {
        border-bottom: 1px solid #e6e6e6;
        margin: 15px 0;
        padding-bottom: 10px;
    }
</style>
<div style="margin-top: 10px;min-height: 400px;">
    <div class="uk-grid">
        <div class="uk-width-1-1 uk-margin-bottom">
            <textarea id="txtNote" placeholder="@Model.Translate(566, "Add notes here")" class="md-input" rows="3" style="border:1px solid rgb(234, 234, 234)"></textarea>
        </div>
        <div class="uk-width-1-1 uk-text-right">
            <button class="md-btn md-btn-new md-btn-wave-light" ng-click="PostNote()">@Model.Translate(433, "Add Note")</button>
        </div>
        <div class="uk-width-1-1">
            <h5><b>@Model.Translate(434, "List Note")</b></h5>
            <p class="box-note" ng-repeat="item in reservationNote">
                <span>{{item.CreateDate | date:'dd/MM/yyyy HH:mm:ss'}}</span>
                <span class="user-note">- {{item.UserName}}</span>
                <span style="display:block;margin-top: 5px;font-size: 14px;"> {{item.Note}}</span>
            </p>
        </div>
    </div>
</div>